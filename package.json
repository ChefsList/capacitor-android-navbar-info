{
  "name": "@chefslist/capacitor-android-navigation-bar-info",
  "version": "0.0.1",
  "description": "Capacitor plugin for Android to get navigation bar height, visibility, and gesture navigation mode",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "NavigationBarInfo.podspec"
  ],
  "author": "Chefslist",
  "license": "Apache License, Version 2.0, January 2004",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/chefslist/capacitor-android-navigation-bar-info.git"
  },
  "bugs": {
    "url": "https://gitlab.com/chefslist/capacitor-android-navigation-bar-info.git/issues"
  },
  "keywords": [
    "capacitor",
    "capacitor-plugin",
    "android",
    "navigation-bar",
    "system-bars",
    "gesture-navigation",
    "navigation-bar-height",
    "navigation-bar-visibility",
    "safe-area",
    "insets",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:android && npm run verify:web",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "docgen": "docgen --api NavigationBarInfoPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "typescript": "~4.1.5"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "capacitor": {
    "platforms": ["android", "ios", "web"],
    "android": {
      "src": "android"
    }
  }
}
